# Database Configuration
DATABASE_URL=postgresql://localhost:5432/capstone

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
PORT=8080

# Auth0 Configuration
# Get these from your Auth0 Dashboard (Applications > APIs)
AUTH0_DOMAIN=your-tenant.auth0.com
API_AUDIENCE=casting-agency
ALGORITHMS=RS256

# Optional: For testing with different Auth0 configuration
# Note: AUTH0_AUDIENCE is kept for backward compatibility
# AUTH0_AUDIENCE=casting-agency
# AUTH0_CLIENT_ID=your_client_id
# AUTH0_CLIENT_SECRET=your_client_secret

# Test Database (for running tests)
DATABASE_URL_TEST=postgresql://localhost:5432/capstone_test

# JWT Tokens for Testing (obtain from Auth0)
# These should be valid JWT tokens with appropriate permissions
# Get these tokens from Auth0 after setting up roles and users
# ASSISTANT_TOKEN=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...
# DIRECTOR_TOKEN=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...
# PRODUCER_TOKEN=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9...
